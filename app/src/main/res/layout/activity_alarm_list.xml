<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarms"
        android:id="@+id/alarm_title_textview"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/white"
        android:id="@+id/line1"
        android:layout_below="@+id/alarm_title_textview"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currently No Alarms Exists"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_below="@+id/line1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/no_alarm_textviwe" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/alarm_listview"
        android:layout_below="@+id/line1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currently No Alarms Exists"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:textColor="@color/white"
        android:id="@+id/destination_title_textview"
        android:layout_below="@+id/alarm_listview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:id="@+id/line2"
        android:background="@color/white"
        android:layout_below="@+id/destination_title_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/destination_textview"
        android:layout_below="@+id/line2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"
        android:id="@+id/destination_delete_button"
        android:visibility="invisible"
        android:layout_below="@+id/line2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit"
        android:id="@+id/destination_edit_button"
        android:visibility="invisible"
        android:layout_below="@+id/line2"
        android:layout_toLeftOf="@+id/destination_delete_button"
        android:layout_toStartOf="@+id/destination_delete_button" />

</RelativeLayout>